<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.richamehta.myapplication.MainActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="CHAPTER: #dance"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:autoLink="phone"
            android:paddingBottom="5dp"
            android:text="For more details,Contact:
 +918284931560"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/phone"
            android:autoLink="map"
            android:paddingBottom="10dp"
            android:text="Address :CHITKARA UNIVERSITY, PUNJAB "
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#75ff33"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/add"
            android:text="where dance is an ART"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:textColor="#dbff33"
            android:textSize="18sp" />
    </RelativeLayout>

